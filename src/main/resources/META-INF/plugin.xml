<idea-plugin>
    <id>app.ultradev.hytaleui</id>
    <name>HyUI</name>
    <vendor url="https://github.com/MrMineO5/">UltraDev</vendor>
    <description>A plugin to provide editor features for Hytale UI files</description>
    <depends>com.intellij.modules.platform</depends>

    <depends optional="true" config-file="app.ultradev.hytaleui-java.xml">com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- File Type -->
        <fileType name="UI File" implementationClass="app.ultradev.uifiles.UIFileType" fieldName="INSTANCE"
                  extensions="ui" language="UI"/>

        <!-- Language and Parser -->
        <lang.parserDefinition language="UI" implementationClass="app.ultradev.uifiles.UIParserDefinition"/>

        <!-- Formatter -->
        <lang.formatter language="UI" implementationClass="app.ultradev.uifiles.formatter.UIFormattingModelBuilder"/>

        <!-- Folding -->
        <lang.foldingBuilder language="UI" implementationClass="app.ultradev.uifiles.folding.UIFoldingBuilder"/>

        <!-- Syntax Highlighting -->
        <lang.syntaxHighlighterFactory language="UI"
                                       implementationClass="app.ultradev.uifiles.syntax.UISyntaxHighlighterFactory"/>

        <!-- Code Completion -->
        <completion.contributor language="UI"
                                implementationClass="app.ultradev.uifiles.completion.UICompletionContributor"/>

        <!-- Reference Resolution -->
        <psi.referenceContributor language="UI" implementation="app.ultradev.uifiles.reference.UIReferenceContributor"/>
        <elementDescriptionProvider implementation="app.ultradev.uifiles.psi.TestElementDescriptionProvider"/>
        <lang.findUsagesProvider language="UI" implementationClass="app.ultradev.uifiles.reference.UIFindUsagesProvider"/>

        <!-- Annotations/Error Highlighting -->
        <annotator language="UI" implementationClass="app.ultradev.uifiles.annotation.UIAnnotator"/>

        <!-- Documentation -->
        <platform.backend.documentation.targetProvider
                implementation="app.ultradev.uifiles.documentation.UIDocumentationProvider"/>

        <!-- Commenting -->
        <lang.commenter language="UI" implementationClass="app.ultradev.uifiles.commenter.UICommenter"/>

        <!-- Startup Activity - parse all files on project open -->
        <postStartupActivity implementation="app.ultradev.uifiles.startup.UIStartupActivity"/>

        <toolWindow id="UI Preview"
                    anchor="right"
                    factoryClass="app.ultradev.uifiles.preview.UIPreviewToolWindowFactory"
                    icon="/META-INF/uifile.svg"/>

        <applicationService
                serviceImplementation="app.ultradev.uifiles.settings.UIAppSettings"/>

        <applicationConfigurable
                parentId="tools"
                instance="app.ultradev.uifiles.settings.UIAppSettingsConfigurable"
                id="app.ultradev.uifiles.settings.UIAppSettingsConfigurable"
                displayName="Hytale UI Parser Settings"/>
    </extensions>
</idea-plugin>
